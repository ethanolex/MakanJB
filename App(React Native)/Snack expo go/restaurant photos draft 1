      backgroundColor: '#FCF7F3',
      padding: 20,
      alignItems: 'center'
    },
    Nav: {
      backgroundColor: '#f2f2f2',
      padding: 10,
      flexDirection: 'row',
      justifyContent: 'center'
    },
    NavLink: {
      color: '#333',
      textDecoration: 'none',
      marginHorizontal: 10
    },
    BackLink: {
      color: 'black',
      padding: 10,
      paddingLeft: 20
    },
    Container: {
      maxWidth: 900,
      marginHorizontal: 'auto',
      padding: 20,
      paddingBottom: 40
    },
    Gallery: {
      flexDirection: 'row',
      flexWrap: 'wrap',
      justifyContent: 'center',
      gap: 20
    },
    GalleryImg: {
      width: 250,
      height: 350,
      borderRadius: 4,
      shadowColor: '#000',
      shadowOffset: { width: 0, height: 2 },
      shadowOpacity: 0.1,
      shadowRadius: 6,
      margin: 10
    },
    GalleryTitle: {
      fontSize: 36,
      fontWeight: '700',
      textAlign: 'center',
      marginBottom: 40,
      marginTop: 0
    },
    Modal: {
      flex: 1,
      backgroundColor: 'rgba(0, 0, 0, 0.8)',
      justifyContent: 'center',
      alignItems: 'center'
    },
    ModalImg: {
      width: '90%',
      height: '90%',
      borderRadius: 8,
      resizeMode: 'contain'
    },
    Close: {
      position: 'absolute',
      top: 20,
      right: 40,
      color: 'white',
      fontSize: 30
    }
  };

  return (
    <ScrollView style={styles.Body}>
      <View style={styles.Header}>
        <TouchableOpacity href='home_page.html'>
          <Image 
            source={{uri: "https://static.wixstatic.com/media/818cbe_6b80915765e4490eae3775030fe869d4~mv2.png/v1/fill/w_154,h_154,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/818cbe_6b80915765e4490eae3775030fe869d4~mv2.png"}}
