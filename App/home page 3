class UniqueHoverButton extends StatelessWidget {
  final String title;
  final String url;
  final String image;

  UniqueHoverButton({required this.title, required this.url, required this.image});

  void _launchURL() async {
    if (await canLaunch(url)) {
      await launch(url);
    } else {
      throw 'Could not launch $url';
    }
  }
  
  @override
  Widget build(BuildContext context) {
    return Column(
      mainAxisAlignment: MainAxisAlignment.center,
      children: [
        GestureDetector(
          onTap: _launchURL,
          child: MouseRegion(
            onEnter: (_) => {1},
            onExit: (_) => {1},
            child: Container(
              margin: EdgeInsets.all(4), // Spacing around the button
              decoration: BoxDecoration(
                color: Color(0xFFF2F2F2),
                borderRadius: BorderRadius.circular(8),
),
              child: Image.network(
                image,
                height: 50, // Adjust image height
                width: 50, // Adjust image width
              ),
            ),
          ),
        ),
        
        SizedBox(height: 4), // Spacing between button and text
        Text(
          title,
          style: TextStyle(color: Colors.black),
          
        ),
        
      ],
    );
  }
}
